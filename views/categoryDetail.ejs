<div class="px-4 sm:px-0 mx-auto">
  <header class="bg-white rounded border border-gray-300">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
      <h1 class="text-xl font-bold tracking-tight text-gray-900">
        Category detail
      </h1>
    </div>
  </header>

  <div class="my-5 px-2 py-6 sm:px-6 lg:px-8">
    <div class="px-4 sm:px-0">
      <h2 class="text-base font-semibold leading-7 text-gray-900">
        <%= category.name %>
      </h2>
      <div class="flex-row space-x-0.5">
        <a
          class="hover:underline"
          href="<%= category.url %>/update"
          hx-get="<%= category.url %>/update">
          <small>Update</small>
        </a>
        <a
          class="hover:underline"
          href="<%= category.url %>/delete"
          hx-delete="<%= category.url %>/delete"
          hx-confirm="Are you sure?">
          <small>Delete</small>
        </a>
      </div>
    </div>
    <div class="mt-6 border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">
            Description
          </dt>
          <dd
            class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
          >
            <%= category.description %>
          </dd>
        </div>
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <% if (items.length > 0) { %>
          <dt class="text-sm font-medium leading-6 text-gray-900">
            Items in this category:
          </dt>
          <dd
            class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
          >
            <div
              class="max-w-md mt-3 mx-auto p-3 rounded-md bg-white border border-gray-300"
            >
              <ul role="list" class="divide-y divide-gray-300">
                <% items.forEach(item => { %>
                <li
                  class="flex flex-row items-center justify-between gap-x-6 p-2"
                >
                  <p class="text-sm font-semibold leading-6 text-gray-900">
                    <%= item.name %>
                  </p>
                  <a
                    class="hover:bg-gray-200 transition duration-200 rounded-full p-1 cursor-pointer"
                    href="<%= item.url %>"
                    hx-get="<%= item.url %>"
                    hx-push-url="true"
                  >
                    <img
                      class="w-7 h-7 pl-0.5"
                      src="/images/chevron_right_FILL0_wght400_GRAD0_opsz48.svg"
                      alt="Item Detail"
                    />
                  </a>
                </li>
                <% }) %>
              </ul>
            </div>
          </dd>
          <% } else { %>
          <dt class="text-sm font-medium leading-6 text-gray-900"></dt>
          <dd
            class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
          >
            There are no items in this category.
          </dd>
          <% } %>
        </div>
      </dl>
    </div>
  </div>
</div>
